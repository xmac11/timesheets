@model IEnumerable<Timesheets.Models.MyUser>

@using Microsoft.AspNetCore.Identity
@inject UserManager<MyUser> userManager
@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Add New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                E-mail
            </th>
            <th>
                Cost per Hour
            </th>
            <th>
                Department
            </th>
            <th>
                Manager
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CostPerHour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Department.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Manager.UserName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    
                    @if (!userManager.GetRolesAsync(item).Result.Contains("Manager") && 
                        (!userManager.GetRolesAsync(item).Result.Contains("Admin")))
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id"> Delete </a>
                    }
                    </td>

             </tr>
          }
</tbody>
</table>
