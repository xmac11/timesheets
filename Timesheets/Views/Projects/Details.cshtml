@model Timesheets.Models.ViewModels.ProjectViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Project</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>

        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class="col-sm-2">
            Owner Department
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OwnerDeptName)
        </dd>

        <dt class="col-sm-2">
            Related Departments
        </dt>
        <dd class="col-sm-10">
            @foreach(Department department in Model.RelatedDepartments)
            {
                 @department.Name <br />
             }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
