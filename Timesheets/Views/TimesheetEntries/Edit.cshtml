@model Timesheets.Models.TimesheetEntryViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>TimesheetEntry</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="RelatedUserName" class="control-label"></label>
                <select asp-for="RelatedUserName" asp-items="@(new SelectList(Model.UserNames))" class="form-control">
                    <option disabled selected>Select employee...</option>
                </select>
                <span asp-validation-for="RelatedUserName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ProjectName" class="control-label"></label>
                <select asp-for="ProjectName" asp-items="@(new SelectList(Model.ProjectNames))" class="form-control">
                    <option disabled selected>Select project...</option>
                </select>
                <span asp-validation-for="ProjectName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DateCreated" class="control-label"></label>
                <input asp-for="DateCreated" class="form-control"
                       min="@DateTime.Now.Year-01-01" max="@DateTime.Now.ToString("yyyy-MM-dd")"
                       data-msg-min="Date must be in @DateTime.Now.Year" data-msg-max="Date cannot be in the future" />
                <span asp-validation-for="DateCreated" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="HoursWorked" class="control-label"></label>
                <input asp-for="HoursWorked" class="form-control" />
                <span asp-validation-for="HoursWorked" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
